mixin input(name,type)
    div(class="flex flex-col mt-5")        
        label(for=name class='uppercase tracking-wider mb-2')= name
        input(type=type name=name id=name class='block bg-white px-3 py-2 border border-slate-300 rounded-md placeholder-slate-400 focus:outline-none focus:border-green-500 focus:ring-1 focus:ring-green-500 disabled:bg-slate-50 disabled:text-slate-500 disabled:border-slate-200 disabled:shadow-none invalid:border-pink-500 invalid:text-pink-600 focus:invalid:border-pink-500 focus:invalid:ring-pink-500')